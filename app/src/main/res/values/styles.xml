<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--<item name="android:typeface">default</item>-->
    </style>

    <style name="line" >
        <item name="android:background">@color/cardview_textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <!--<style name="CustomTabWidgetText"
        parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">5sp</item>
        <item name="android:textStyle">bold</item>
    </style>-->
    <!--Main Activity-->
    <!--start-->
    <style name="appLogo">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/appLogoTextSize</item>
    </style>
    <style name="loginButton">
        <item name="android:layout_margin">@dimen/loginButtonLayout_Margin</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:textSize">@dimen/loginButtonTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="bigText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/loginButtonTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>
    <style name="smallText">
        <item name="android:textColor">#fff</item>
        <item name="android:paddingRight">@dimen/margin_bw_element</item>
        <item name="android:paddingLeft">@dimen/margin_bw_element</item>
        <item name="android:textSize">@dimen/smallTextTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--Main Activity--> <!--finish-->

    <!--Style for login Activity-->
        <!--Start-->
    <style name="textView">
        <item name="android:textSize">@dimen/mediumText</item>
    </style>
    <style name="usernametextView">
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="passwordtextView">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>
    <style name="usernameInputText">
        <item name="android:hint">andreapierce@invisionapp.com</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>
    <style name="passwordInputText">
        <item name="android:hint">********</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="simpleSignin">
        <item name="android:text">Sign In</item>
        <item name="android:background">#48d8c0</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="signinGoogle">
        <item name="android:text">Sign In</item>
        <item name="android:background">#f03060</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="main_activity">
        <item name="android:padding">@dimen/activity_padding</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--End-->
    <!--Style for login activity-->

    <!--style for homepage Activity-->
    <!--start-->
    <style name="cardview" >
        <item name="android:clickable">true</item>
    </style>

    <style name="spinner_style" >
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="card_view">
        <item name="android:clickable">true</item>
    </style>
    <!--end-->
    <!--style for homepage Activity-->
</resources>
