<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/card_holder">

<android.support.v7.widget.CardView
    android:id="@+id/card_view2"
    style="@style/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevtion"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/cardview_layout_margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/cardview_linear_layout_padding">
        <ImageView
            android:id="@+id/common_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cardview_textSize"
            android:textColor="@color/cardview_textColor"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>